{
    "manifest_version": 2,
    "name": "BlizzCon Ticket Grabber",
    "description": "Aids in the purchasing of blizzcon tickets",
    "version": "0.2.0",
    "permissions": [ 
        "tabs", 
        "http://*/*", 
        "https://*/*"
    ],
    "browser_action": {
        "default_icon": "img/icon-48.png"
    },
    "content_scripts" : [{
        "matches" : [ "http://www.eventbrite.com/*"],
        "js" : ["js/eventbrite.js"],
        "run_at": "document_end"
    }],
    "icons": {
        "16":"img/icon-16.png",
        "48":"img/icon-48.png",
        "128":"img/icon-128.png"
    },
    "background": { 
        "page": "background.html"
    },
    "web_accessible_resources": [ 
        "js/jquery.js",
        "js/app.js",
        "js/improve_load.js"
    ]
}
